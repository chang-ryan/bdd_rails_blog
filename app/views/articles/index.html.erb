<%= link_to "New Article", new_article_path, class: "btn btn-default btn-lg" %>

<% if @articles.empty? %>
  <h1 id="no-articles">No articles yet!</h1>
<% else %>
  <% @articles.each do |article| %>
    <div class="well well-lg">
      <div class="article-title">
        <h2><%= link_to article.title, article_path(article) %></h2>
      </div>
      <div class="article-body">
        <p><%= truncate(article.body, length: 500) %></p>
      </div>
      <div class="author">
        <span>Created by: <%= article.user.email %></span>
      </div>
    </div>
  <% end %>
<% end %>